datasource db {
  provider = "postgresql"
  // url      = "env(DATABASE_URL)"
  url      = "postgresql://piscopancer:0109@localhost:5555/jalyk"
}

generator client {
  provider = "prisma-client-js"
  output   = "./prisma"
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  email     String    @unique
  name      String
  projects  Project[]
}

model Project {
  id        String     @id @default(cuid())
  title     String
  createdAt DateTime   @default(now())
  ownerId   Int
  owner     User       @relation(fields: [ownerId], references: [id])
  documents Document[]
}

model Document {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  fields    Json[]
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
}
